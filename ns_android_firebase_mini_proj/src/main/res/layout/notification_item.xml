<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_marginEnd="2dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@drawable/shape5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/department"
            android:layout_width="218dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/stamp"
            android:fontFamily="@font/alegreya_regular"
            android:gravity="center"
            android:text="DEPARTMENT OF CSE"
            android:autoSizeTextType="uniform"
            android:textColor="#FAF8F8"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/department"
            android:layout_alignParentStart="true"
            android:layout_marginStart="41dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/stamp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/alegreya_regular"
            android:gravity="center"
            android:text="Assoc. Prof. Swamy Das"
            android:textColor="#E65E5E"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/stamp"
            android:layout_width="127dp"
            android:layout_height="95dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/light_blue" />


        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="109dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/alegreya_italic"
            android:text="Dear customer, you paid for the stamp layout in mystampready.com. Your layout is located in the archive attached to the letter."
            android:textColor="#B7BDC0"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/faculty"
            android:layout_width="51dp"
            android:layout_height="22dp"
            android:layout_alignStart="@+id/stamp"
            android:layout_alignTop="@+id/stamp"
            android:layout_alignBottom="@+id/stamp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="37dp"
            android:layout_marginBottom="38dp"
            android:fontFamily="@font/alegreya_regular"
            android:gravity="center"
            android:text="Principal"
            android:autoSizeTextType="uniform"
            android:textColor="#2552B5"
            android:textStyle="bold" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/sr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>